<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/arrow_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_24"
        android:src="@drawable/ic_keyboard_arrow_right_black_18dp" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/margin_4"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_32"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_toStartOf="@id/arrow_image_view"
        android:textAppearance="@style/TextAppearance.GMS.ListItem"
        tools:text="Glide Usage" />

    <TextView
        android:id="@+id/sub_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/title_text_view"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_32"
        android:layout_toStartOf="@id/arrow_image_view"
        android:textAppearance="@style/TextAppearance.GMS.ListItem.Sub"
        tools:text="Glide Usage" />

</RelativeLayout>